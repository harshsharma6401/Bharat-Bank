<html lang="en">
<%-include("./partials/head.ejs") %>
<body>
  
    <%- include('./partials/nav.ejs') %>
    
    <div class="add-user">
        <a href="./add-user"><button type="button" class="btn btn-outline-success btn-lg "> Register Account </button></a>
 </div>

    <div class="user-table">
<table id="customers">
    <thead>
    <tr>
      <th>Account Number</th>
      <th>Name</th>
      <th>Email</th>
      <th>Current Balance</th>
      <th>Update details</th>
    </tr>
</thead>
    
   
   <tbody>
   
    <% if(users.length > 0) { %>

        <% users.forEach(user => { %>

            <tr>
                <td ><%=  user.accountNumber %></td>
                <td><%=  user.name %></td>
                <td><%=  user.email %></td>
                <td><%=  user.balance %></td>
                <td><form action="/modify" method="post"> 
                    <input type="text" name="username" id="username" value= <%=  user.email %>>
                    <input type="text" name="password" id="password" value= "test123">
                      <input type="submit" name='submit' ></form> </td>
            </tr>

        <% }) %>
        <% }  
        else {%> 
            <p>There are no users to display... </p>
           
        <% } %>

</tbody>

  </table>
</div>
  
<%- include('./partials/foot.ejs') %>
    



</body>
</html>
